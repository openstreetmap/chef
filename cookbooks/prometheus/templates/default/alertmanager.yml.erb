global:
  smtp_smarthost: localhost:25
  smtp_from: prometheus@openstreetmap.org
  smtp_require_tls: false

templates:
  - /etc/prometheus/alertmanager_templates/*.tmpl

route:
  group_by:
    - alertgroup
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h
  receiver: admins-email
  routes:
  - group_wait: 30m
    group_interval: 6h
    repeat_interval: 24h
    matchers:
    - alertgroup=smokeping

inhibit_rules:

receivers:
  - name: admins-email
    email_configs:
      - send_resolved: true
        to: admins@openstreetmap.org
