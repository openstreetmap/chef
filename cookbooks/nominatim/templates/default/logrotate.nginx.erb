/var/log/nginx/*.log {
  daily
  missingok
  rotate 7
  compress
  delaycompress
  notifempty
  create 640 nginx adm
  sharedscripts
  postrotate
    [ -f /var/run/nginx.pid ] && kill -USR1 `cat /var/run/nginx.pid`
  endscript
}

<%= node[:nominatim][:logdir] %>/nominatim.openstreetmap.org-*.log {
  daily
  missingok
  rotate 28
  compress
  delaycompress
  notifempty
  create 640 root adm
  sharedscripts
  postrotate
    [ -f /var/run/nginx.pid ] && kill -USR1 `cat /var/run/nginx.pid`
  endscript
}
