<IfModule mod_status.c>

ExtendedStatus On

<Location /server-status>
    SetHandler server-status
<% node.ipaddresses.sort.each do |address| -%>
    Require ip <%= address %>
<% end -%>
    Require ip 127.0.1.1
    Require ip 127.0.0.1
    Require ip ::1
<% @hosts.each do |host| -%>
    Require ip <%= host %>
<% end -%>
</Location>

<IfModule mod_proxy.c>
    ProxyStatus On
</IfModule>

</IfModule>
