#!/bin/bash

# DO NOT EDIT - This file is being maintained by Chef

# Get current time
timestamp=$(date +%s)
<% node[:tile][:styles].each_key do |style| -%>

# Define function to update tiles from z0 to z12 for style "<%= style %>"
function update_<%= style %>
{
  render_old \
    --timestamp=${timestamp} \
    --tile-dir=/srv/tile.openstreetmap.org/tiles \
    --socket=/run/renderd/renderd.sock \
    --num-threads=<%= @threads %> \
    --map="<%= style %>" \
    --max-load=<%= node.cpu_cores - 1 %> \
    --min-zoom=0 --max-zoom=12
}

max_tries=120
count=0

# Loop running the update command until it succeeds
until update_<%= style %>
do
  count=$((count + 1))
  if [ "$count" -ge "$max_tries" ]; then
    echo "Aborting <%= style %> after $max_tries failed attempts"
    break
  fi
  sleep 30
done
<% end -%>

exit 0
