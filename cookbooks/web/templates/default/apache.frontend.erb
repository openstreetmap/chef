  Require all granted
</Directory>

<Directory /srv/www.openstreetmap.org/rails/vendor/assets>
  Require all granted
</Directory>

<Directory /store/rails/stats>
  Require all granted
</Directory>

<Directory /store/rails/user/image>
  Require all granted
</Directory>

<Directory /store/rails/attachments>
  Require all granted
</Directory>
